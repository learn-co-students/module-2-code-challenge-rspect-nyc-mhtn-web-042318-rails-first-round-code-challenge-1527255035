<h1>Create a new superhero page </h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_for @superhero do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :super_name %>
<%= f.text_field :super_name %>
<%= f.collection_select :superpower_id, @superpowers, :id, :name %>
<%= f.submit %>
<% end %>
