<h2>All Superheroes</h2>

<%= form_tag(superheroes_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Superheroes" %>
    <%= submit_tag "Search", name: nil %>
<% end %>

<ul>
  <% @superheroes.each do |superhero| %>
    <li>
      <%= link_to superhero.super_name, superhero %> | <%= link_to superhero.superpower.name, superhero.superpower %> ||
      <%= link_to superhero.name, superhero %>
    </li>
    <br>
  <% end %>
</ul>
